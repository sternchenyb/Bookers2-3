<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
     <%= render 'layouts/errors', obj: @book %>
      <h2>User info</h2>
      <%= render 'users/info', user: @user  %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          
          <% if @book.favorited_by?(current_user) %>
           <td>
             <%= link_to book_favorites_path(@book), method: :delete do %>
              <span class="fas fa-heart" style="color:red;"></span>
             <%= @book.favorites.count %>
						 <% end %>
           </td>
          <% else %>
           <td>
             <%= link_to book_favorites_path(@book), method: :post do %>
              <span class="fas fa-heart" style="color:red;"></span>
             <%= @book.favorites.count %>
             <% end %>
           </td>
          <% end %>
          
          <td>コメント数：<%= @book.book_comments.count %></td>
          
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      
      
      <table>
        <tr>
         <% @book.book_comments.each do |book_comment| %>
          <td><%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
              <%= book_comment.user.name %></td>
          <td><%= book_comment.comment %></td>
          <td>
          <% if book_comment.user_id == current_user.id %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn-sm btn-danger"%>
          <% end %>
          </td>
         <% end %>
        </tr>
      </table>
      
      
      <div class="post_comment">
       <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows: '5' %>
       <%= f.submit "送信" %>
       <% end %>
      </div>
    </div>
  </div>
</div>